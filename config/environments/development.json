{
  "database": {
    "provider": "dynamodb",
    "region": "us-east-1",
    "table_name": "boom_bust_metrics_dev",
    "ttl_days": 30
  },
  "alert_thresholds": {
    "bond_issuance": 1000000000,
    "bdc_discount": 0.03,
    "credit_fund": 0.05,
    "bank_provision": 0.10
  },
  "notifications": {
    "enabled_channels": ["telegram"],
    "max_retries": 2,
    "retry_delay": 0.5
  },
  "monitoring": {
    "provider": "grafana",
    "metrics_enabled": true,
    "health_check_interval": 600
  },
  "scraping": {
    "max_retries": 2,
    "timeout_seconds": 15,
    "rate_limit_delay": 0.5,
    "bdc_symbols": ["ARCC", "OCSL"],
    "tech_company_ciks": {
      "MSFT": "0000789019",
      "META": "0001326801"
    }
  }
}